diff -ruwN source/lib/fchmodat.c source-new/lib/fchmodat.c
--- source/lib/fchmodat.c	2023-07-10 05:21:54.000000000 +0000
+++ source-new/lib/fchmodat.c	2025-11-02 00:00:00.000000000 +0000
@@ -90,8 +90,14 @@ rpl_fchmodat (int dir, char const *file, mode_t mode, int flags)
       /* Open a file descriptor with O_NOFOLLOW, to make sure we don't
          follow symbolic links, if /proc is mounted.  O_PATH is used to
          avoid a failure if the file is not readable.
-         Cf. <https://sourceware.org/bugzilla/show_bug.cgi?id=14578>  */
+         Cf. <https://sourceware.org/bugzilla/show_bug.cgi?id=14578>
+         Redox defines O_PATH but doesn't implement openat(). */
+#if defined(O_PATH) && !defined(__redox__)
       int fd = openat (dir, file, O_PATH | O_NOFOLLOW | O_CLOEXEC);
+#else
+      int fd = -1;
+      errno = ENOSYS;
+#endif
       if (fd < 0)
         return fd;

